{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "outDir": "dist-server",
    "target": "es2022",
    "sourceMap": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true
  },
  "include": ["server.ts", "server/**/*", "knexfile.ts", "migrations/**/*"],
  "exclude": ["src", "node_modules", "**/*.test.ts"]
}
