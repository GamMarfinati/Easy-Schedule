# Banco de Dados
DATABASE_URL="postgresql://user:password@localhost:5432/horaprofe"

# Auth0 (Backend)
AUTH0_DOMAIN="dev-xyz.us.auth0.com"
AUTH0_AUDIENCE="https://api.horaprofe.com.br"

# Auth0 (Frontend)
VITE_AUTH0_DOMAIN="dev-xyz.us.auth0.com"
VITE_AUTH0_CLIENT_ID="your_client_id"
VITE_AUTH0_AUDIENCE="https://api.horaprofe.com.br"

# Stripe (Produção - use chaves sk_live_ e whsec_ do modo Live)
STRIPE_SECRET_KEY="<sua_chave_secreta>"
STRIPE_WEBHOOK_SECRET="<seu_webhook_secret>"

# SendGrid - Configuração Principal
SENDGRID_API_KEY="SG.your_api_key"
SENDGRID_FROM_EMAIL="noreply@horaprofe.com.br"

# SendGrid - Template IDs (Dynamic Templates)
# Obtenha estes IDs no painel do SendGrid após criar os templates
SENDGRID_TEMPLATE_WELCOME="d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
SENDGRID_TEMPLATE_PAYMENT="d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
SENDGRID_TEMPLATE_PAYMENT_FAILED="d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
SENDGRID_TEMPLATE_SCHEDULE="d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
SENDGRID_TEMPLATE_TRIAL="d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
SENDGRID_TEMPLATE_INVITE="d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Configuração Geral
FRONTEND_URL="https://horaprofe.com.br"
NODE_ENV="production"

# Gemini API (Geração de Grades)
GEMINI_API_KEY="your_gemini_api_key"

